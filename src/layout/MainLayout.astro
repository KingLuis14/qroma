---
interface Props {
  title: string
  description: string
}
import { ClientRouter } from 'astro:transitions'
const { title, description } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ClientRouter />
  </head>
  <body>
    <main class="wrapper">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }

  *,
  *::after,
  *::before {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }

  input,
  select {
    /* max-width: 100%; */
    padding: 0.5em;
    border-color: transparent;
  }

  .wrapper{
    width: min(90%,1400px);
    margin-inline: auto;
  }

  .button {
    padding: 0.5em 1em;
    border-radius: 0.2em;
    border: none;
    cursor: pointer;
    font-weight: 500;

    &.green {
      background-color: rgba(59, 200, 54, 0.17);
      border: 1px solid #3bc836;
    }
    &.disable {
      background-color: rgba(89, 89, 89, 0.17);
      border: 1px solid #595959;
    }

    &.red {
      background-color: rgba(226, 40, 43, 0.17);
      border: 1px solid #e2282b;
    }
  }

  li {
    list-style: none;
  }

  img {
    width: 100%;
    display: block;
    object-fit: cover;
  }

  button {
    background-color: transparent;
  }

  textarea {
    padding: 0.75rem 0.5rem;
    resize: none;
  }
</style>
